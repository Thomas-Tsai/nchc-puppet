<?xml version="1.0"?>
<configuration>

<property>
    <name>yarn.resourcemanager.resource-tracker.address</name>
    <value><%= scope.lookupvar('hadoop::params::master') %>:<%= scope.lookupvar('hadoop::params::resource_tracker_port') %></value>
  </property>
  <property>
    <name>yarn.resourcemanager.scheduler.address</name>
    <value><%= scope.lookupvar('hadoop::params::master') %>:<%= scope.lookupvar('hadoop::params::scheduler_port') %></value>
  </property>
<property>
    <name>yarn.resourcemanager.address</name>
    <value><%= scope.lookupvar('hadoop::params::master') %>:<%= scope.lookupvar('hadoop::params::resourcemanager_port') %></value>
  </property>
<property>
    <name>yarn.nodemanager.address</name>
    <value>0.0.0.0:<%= scope.lookupvar('hadoop::params::nodemanager_port') %></value>
  </property>
<property>
    <name>yarn.nodemanager.aux-services</name>
    <value>mapreduce.shuffle</value>
  </property>
  <property>
    <name>yarn.nodemanager.aux-services.mapreduce.shuffle.class</name>
    <value>org.apache.hadoop.mapred.ShuffleHandler</value>
  </property>

<property>
    <name>yarn.nodemanager.local-dirs</name>
    <value><%= scope.lookupvar('hadoop::params::yarn_nodemanager_localdirs') %></value>
  </property>

<property>
    <name>yarn.nodemanager.log-dirs</name>
    <value><%= scope.lookupvar('hadoop::params::yarn_nodemanager_logdirs') %></value>
  </property>

</configuration>
